<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/def_bg"
    tools:context=".ProfileActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/namecard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="10dp">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:fontFamily="@font/abeezee"
            android:background="@null"
            android:layout_margin="10dp"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/idCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/namecard"
        app:cardCornerRadius="10dp">

        <EditText
            android:id="@+id/id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Employee ID"
            android:fontFamily="@font/abeezee"
            android:background="@null"
            android:layout_margin="10dp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/call_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/idCard"
        android:text="Call Data"
        android:layout_margin="10dp"
        android:fontFamily="@font/abeezee"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/sheet_url_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/call_data"
        app:cardCornerRadius="10dp">

        <EditText
            android:id="@+id/call_sheet_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sheet URL"
            android:fontFamily="@font/abeezee"
            android:background="@null"
            android:layout_margin="10dp"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/sheet_name_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sheet_url_card"
        app:cardCornerRadius="10dp">

        <EditText
            android:id="@+id/call_sheet_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sheet Name"
            android:fontFamily="@font/abeezee"
            android:background="@null"
            android:layout_margin="10dp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/wa_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sheet_name_card"
        android:text="WhatsApp Data"
        android:layout_margin="10dp"
        android:fontFamily="@font/abeezee"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/sheet_url_card_wa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wa_data"
        app:cardCornerRadius="10dp">

        <EditText
            android:id="@+id/wa_sheet_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sheet URL"
            android:fontFamily="@font/abeezee"
            android:background="@null"
            android:layout_margin="10dp"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/sheet_name_card_wa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sheet_url_card_wa"
        app:cardCornerRadius="10dp">

        <EditText
            android:id="@+id/wa_sheet_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sheet Name"
            android:fontFamily="@font/abeezee"
            android:background="@null"
            android:layout_margin="10dp"/>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sheet_name_card_wa"
        app:layout_constraintBottom_toBottomOf="parent"/>





</androidx.constraintlayout.widget.ConstraintLayout>